[user]
	name = CrBoy
	email = crboy@crboy.net

[core]
	editor = vim
	excludesfile = ~/.gitignore
	whitespace = space-before-tab, trailing-space, cr-at-eol
	quotepath = false

[color]
	ui = auto
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	pager = true

[merge]
	tool = vimdiff

[alias]
	st = status
	ci = commit
	co = checkout
	br = branch
	lg = log --graph --all --decorate
	lg1 = log --graph --all --decorate --oneline
	lgs = log --graph --all --decorate --oneline --max-count=20
	lgss = log --graph --all --decorate --oneline --simplify-by-decoration

[push]
	default = simple
[init]
	defaultBranch = main
[diff]
	tool = /usr/local/bin/vimdiff
